<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserHomepage">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="60dp"
        android:background="@color/accentColor"
        android:paddingVertical="20dp"
        android:paddingLeft="4dp"
        android:text="Homepage"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/locBtn"
        android:layout_width="136dp"
        android:layout_height="0dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/button3_bg"
        android:text="Store Location"
        app:layout_constraintBottom_toTopOf="@+id/btn_libraryIntroduction"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <Button
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="46dp"
        android:background="@drawable/button3_bg"
        android:onClick="goToViewBooks"
        android:text="View Books"
        app:layout_constraintBottom_toTopOf="@+id/locBtn"
        app:layout_constraintEnd_toEndOf="@+id/btn_libraryIntroduction"
        app:layout_constraintStart_toStartOf="@+id/locBtn"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btn_libraryIntroduction"
        android:layout_width="134dp"
        android:layout_height="0dp"
        android:layout_marginBottom="268dp"
        android:background="@drawable/button3_bg"
        android:onClick="goToYoutubeIntro"
        android:text="Introduction Video"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locBtn" />
</androidx.constraintlayout.widget.ConstraintLayout>